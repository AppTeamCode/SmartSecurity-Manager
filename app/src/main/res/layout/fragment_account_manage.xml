<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

   <app.edu.cdu.com.smartsecurity_manager.ui.widget.TopView
       android:id="@+id/account_manage_topView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <include layout="@layout/user_account_info_list_item"/>

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:background="@drawable/setbar_bg"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/userAvatar_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_account_manage_name1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="李师傅"
                android:textColor="@color/colorDarkText"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="456452457785"
                android:textColor="@color/colorDarkText"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_account_manage_test1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/ic_cab_done_holo_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/setbar_bg"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_input_add"/>

        <TextView
            android:id="@+id/textview_id_manage_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@android:drawable/ic_menu_directions"
            android:gravity="center_vertical"
            android:text="添加账号"
            android:textColor="@color/colorButton"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="250sp"/>

    </LinearLayout>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:orientation="vertical"
       android:layout_marginTop="70dp">

       <TextView
           android:id="@+id/textview_id_manage_exit"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/setbar_bg"
           android:drawableRight="@android:drawable/ic_menu_directions"
           android:gravity="center_vertical"
           android:paddingLeft="10dp"
           android:text="退出当前账号"
           android:textColor="@color/colorDarkText"
           android:textSize="16sp"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/setbar_bg"
           android:gravity="center_vertical"
           android:paddingLeft="10dp"
           android:text="注销当前账号"
           android:textColor="@color/colorDarkText"
           android:textSize="16sp"/>
   </LinearLayout>

    <TextView
        android:id="@+id/textview_id_manage_login_setting"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/colorButton"
        android:gravity="center"
        android:padding="20dp"
        android:text="登录设置"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"/>

</LinearLayout>